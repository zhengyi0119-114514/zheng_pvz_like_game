{
    "version": 3,
    "configurePresets": [
        {
            "name": "windows-base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "windows_x64-debug",
            "displayName": "x64 Debug",
            "inherits": "windows-base",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "windows_x64-release",
            "displayName": "x64 Release",
            "inherits": "x64-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "windows_x86-debug",
            "displayName": "x86 Debug",
            "inherits": "windows-base",
            "architecture": {
                "value": "x86",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "windows_x86-release",
            "displayName": "x86 Release",
            "inherits": "x86-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "conan",
            "hidden": true,
            "binaryDir": "${sourceDir}/build",
            "installDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/build/conan_toolchain.cmake"
            }
        },
        {
            "name": "conan-debug",
            "inherits":"conan",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE":"Debug"
            }
        },
        {   
            "name": "conan-release",
            "inherits":"conan",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE":"Release"
            }
        },
        {
            "name": "default",
            "binaryDir": "${sourceDir}/build",
            "installDir": "${sourceDir}/build",
            "hidden": true
        },
        {
            "name": "debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE":"Debug"
            },
            "hidden": true
        },
        {
            "name": "release",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE":"Release"
            }
        },
        {
            "name": "clang",
            "cacheVariables": {
                "CMAKE_C_COMPILER":"clang",
                "CMAKE_CXX_COMPILER":"clang++"
            },
            "hidden": true
        },
        {
            "name": "gnu",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER":"gcc",
                "CMAKE_CXX_COMPILER":"g++"
            }
        },
        {
            "name": "msvc",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER":"cl.exe",
                "CMAKE_CXX_COMPILER":"cl.exe"
            }
        },
        {
            "name": "default-debug-clang",
            "inherits":[
                "default",
                "clang",
                "debug"
            ]
        },
        {
            "name": "default-debug-gnu",
            "inherits":[
                "default",
                "gnu",
                "debug"
            ]
        },
        {
            "name": "default-debug-msvc",
            "inherits":[
                "default",
                "debug",
                "msvc"
            ]
        },
        {
            "name": "default-release-clang",
            "inherits":[
                "default",
                "gnu"
            ]
        },
        {
            "name": "default-release-gnu",
            "inherits":[
                "default",
                "gnu",
                "release"
            ]
        },
        {
            "name": "default-release-msvc",
            "inherits":[
                "default",
                "release",
                "msvc"
            ]
        }
    ]
}